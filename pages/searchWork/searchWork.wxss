.top{
  height: 104rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
  background-color: #ffffff;
  box-shadow: 0rpx  6rpx  20rpx #f2f3f5;
}


.searchColumn{
  width: 606rpx;
  height: 64rpx;
  background-color: #edf2f7;
  border-radius: 100rpx;
  margin-right: 24rpx;
  margin-left: 32rpx;
  display: flex;
  align-items: center;
}

.input_search{
  color:#8a9099;
  font-size:28rpx;
  width:430rpx;
  margin-left: 11rpx;
}


.work_search{
  width: 34rpx;
  height: 34rpx;
  margin-left: 35rpx;
}




.clear_input{
  font-size: 32rpx;
  color: #8a9099;
}



.inputComText{
  height: 120rpx;
  padding-top: 10rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #f2f3f5;
  width: 100%;
  font-size: 32rpx;
  align-items: center;
  display: flex;
  color: #525a66;
}


.searchTextIcon{
  width: 21rpx;
  height: 21rpx;
  margin: 0rpx 25rpx 0rpx 36rpx;
}

.item{
  display: flex;
 line-height: 120rpx;
  align-items:center;
  height: 120rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.row{
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.logo{
  height: 84rpx;
  width: 84rpx;
  margin-left: 20rpx;
}

.name{
  color: #3d3d3d;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.searchHistory{
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}


.searchHistoryTip{
  font-size: 32rpx;
  color: #3d3d3d;
  margin-left: 24rpx;
  margin-top: 20rpx;
}

.clearSearchHistory{
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}

.searchHistoryContent_work{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-left: 14rpx;
  margin-right: 14rpx; 
  margin-top: 20rpx;
}

.searchHistoryContent_work view{
  padding: 7rpx 28rpx 7rpx 28rpx;
  background-color: #edeef0;
  color: 3d3d3d;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
}

