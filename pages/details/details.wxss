/* pages/details/details.wxss */
page {
  display: block;
  min-height: 100%;
  background-color: #F8F8F8;
  padding-bottom: 98rpx;
}
/*背景色*/
.background-w{
  background-color: white;
}
/*块状显示*/
.block-1{
  padding:26rpx 18rpx;
  border-radius: 10rpx; 
  width: 100%;
  height: 100%;
  margin-bottom: 18rpx;
}
.module-1{
  padding: 0rpx 18rpx 18rpx 18rpx;
  /*border-bottom: 1rpx solid rgba(0,0,0,8%);*/
}
.company-view{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.companyLogo{
  width: 200rpx; 
  height: 200rpx; 
  background-color: #eeeeee;
}
.title{
  display: flex;
  flex-direction: row; 
  justify-content: center;
  padding: 11rpx 0rpx 0rpx 0rpx;
}
.split-line{
  height: 1rpx;
  background: #000000;
  opacity: 0.08;
  margin: 0rpx 18rpx;
}
.title-font{
  text-align: center;
  color: #3D3D3D;
  font-size: 42rpx;
  font-weight: bold;
}
.desc{
  display: flex;
  height: 35rpx;
  line-height: 35rpx;
  flex-direction: row;
  align-items: center;
}
.desc.start-align{
  align-items: flex-start;
  height: 100%;
}
.desc.desc-company{
  justify-content: center;
  /*padding: 11rpx 0 0rpx 0rpx;*/
}
.desc-content{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.desc-font{
  margin-top: 8rpx;
  color: #999999;
  font-size: 28rpx;
}
.font-bold{
  font-weight: bold;
}
.module-2{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  padding:0rpx 18rpx 18rpx 18rpx;
  /*border-bottom: 1rpx solid rgba(0,0,0,8%);*/
}
.text-time{
  padding-right: 0rpx!important;
}
.module-2 view{
  font-size: 26rpx;
  color: #999999;
  padding: 0 60rpx 0 0rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  
}
.padding-right-10{
  padding-right: 13rpx;
}
.module-3{
  padding: 18rpx 18rpx 0rpx 18rpx;
}
.color-deep{
  color: #666666;
}
.border-right{
  /*border-right: 1rpx solid rgba(0, 0, 0, 0.08);*/
  width: 120rpx;
  /*padding-right: 18rpx;*/
}
.desc-length{
  margin-left: 25rpx;
}
.title-padding{
  padding:0rpx 18rpx 26rpx 18rpx; 
}
.resume-view{
  width: 479rpx;
}
.view-title{
  border-left: 6rpx solid #3185FF;
  color: #3185FF;
  padding:0 0 0rpx 18rpx;
  font-weight: bold;
  line-height: 36rpx;
  font-size: 36rpx;
}
.color-yellow{
  /*color: yellow;*/
  color: #3185FF;
}
.view-content{
  margin-top: -28rpx;
  line-height: 150%;
  padding:0rpx 18rpx;
  /*border-top: 1rpx solid rgba(0,0,0,0.8);*/
  font-size: 30rpx;
  color: #666666;
}
.view-content text{
  font-size: 28rpx;
}
.desc-email{
  width: 456rpx;
}
.desc-email-text{
  max-width: 430rpx;
  white-space:nowrap; 
  overflow:hidden; 
  text-overflow:ellipsis;
}
.desc_img{
  width: 26rpx;
  height: 26rpx;
}
/*回到首页按钮*/
.float-div{
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: center;
  left: calc(50% - 90rpx);
  bottom: 170rpx;
  z-index: 100;
  font-size: 28rpx;
  font-weight: bold;
  color: white;
  height: 60rpx;
  width: 180rpx;
  background-color: #3185FF;
  border-radius: 30rpx;
}
/*底部tabbar*/
.tab-bar{
  width:100%;
  height:98rpx;
  position: fixed;
  left:0;
  bottom:0;
  background:#fff;
  z-index: 10;
}
.tab-bar-block{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.tab-bar-block.block-width{
  width: 170rpx;
}
.tab-bar-block .iconfont{
  height:60rpx;
  line-height: 70rpx;
}
.font-style1{
  font-size:56rpx!important;
}
.font-style2{
  font-size:56rpx!important;
}
.font-style3{
  font-size:56rpx!important;
}
.tab-bar-text{
  font-size: 22rpx;
  color: #666666;
}
.hide{
  display: none;
}
.tab-img{
  width: 48rpx;
  height: 48rpx;
}
.send-btn{
  width: 40%;
  height: 98rpx;
  background-color:#3185FF;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.send-text{
  color: white;
  font-weight: bolder;
  font-size: 32rpx;
}
/*空心下拉箭头  用于管理员鉴权*/
.triangle{
  display: flex;
  align-items: center;
}
.triangle .content{
  width: 15rpx;
  height: 15rpx;
  border:#666 solid;
  border-width: 1px 1px 0 0;
  transform: rotate(135deg);
  margin-left: 30rpx;
}
/*自定义sharebutton样式*/
.cuz-btn{
  padding-left: 0rpx!important;
  padding-right: 0rpx!important;
  padding: 0rpx!important;
  border: none!important;
  margin-left: 0rpx!important;
  margin-right: 0rpx!important;
  border-radius: 0!important;
  background-color: white!important;
  line-height: 38rpx!important;
  box-sizing: none!important;
}
button::after{
  padding-left: 0rpx!important;
  padding-right: 0rpx!important;
  padding: 0rpx!important;
  border: none!important;
  margin-left: 0rpx!important;
  margin-right: 0rpx!important;
  border-radius: 0!important;
  line-height: 35rpx!important;
  box-sizing: none!important;
}
button::before{
  padding-left: 0rpx!important;
  padding-right: 0rpx!important;
  padding: 0rpx!important;
  border: none!important;
  margin-left: 0rpx!important;
  margin-right: 0rpx!important;
  border-radius: 0!important;
  background-color: white!important;
  line-height: 35rpx!important;
  box-sizing: none!important;
}

