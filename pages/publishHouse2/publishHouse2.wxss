page{
  background-color: #f7f7f7;
}


.top{
  display: flex;
  align-items:center;
  height: 126rpx;
}

.topTip1{
  font-size: 38rpx;
  margin-left: 24rpx;
  color: #3d3d3d;
  font-weight:500;
}

.topTip2{
  font-size: 24rpx;
  margin-left: 20rpx;
  color: #8f8f8f;
  font-weight:500;
}

 .search{
  height: 100%;
  display: flex;
  width: 702rpx;
  margin-right: 24rpx;
  margin: auto;
}
.searchInput{
  height: 68rpx;
  width: 702rpx;
  background: #F5F5F5;
  border-radius: 4px;
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.searchInput input{
  margin-left: 28rpx;
  color: #8f8f8f;
  font-size: 28rpx;
}
.searchIcon{
  width: 38rpx;
  height: 38rpx;
  margin-right: 27rpx;
}

.label{
  display: flex;
  height: 98rpx;
  align-items: center;
  justify-content: space-between;
}

.noLabel{
  font-size: 24rpx;
  color: #cccccc; 
  height: 36rpx;
  padding-right: 5rpx;
  padding-left: 5rpx;
  line-height: 36rpx;
  text-align: center;
  border: 1rpx dashed #cccccc;
  border-radius: 4rpx;
  background-color: #f4f4f4;
  margin-left: 24rpx;
}

.hasLabel{
  padding-right: 5rpx;
  padding-left: 5rpx;
  font-size: 24rpx;
  color: #FF662E;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  border: 1rpx dashed #FF662E;
  border-radius: 4rpx;
  background-color: #FFF1E0;
  margin-left: 24rpx;
}

.clearLabel{
  display: flex;
  align-items: center;
  margin-right: 24rpx;
}

.clearLabel image{
  width: 36rpx;
  height: 36rpx;
}

.clearLabel view{
  font-size: 28rpx;
  color: #3d3d3d;
}


.title{
  height: 92rpx;
  display: flex;
  align-items:center;
  
}

.inputTitle{
  background-color: #f5f5f5;
  margin-left: 40rpx;
  padding-left: 20rpx;
  width: 558rpx;
}

.inputTitle input{
  color: #8f8f8f;
  font-size: 28rpx;
}
  
.inputDetail{
  width: 654rpx;
  background-color: #f7f7f7;
  margin-left: auto;
  margin-right: auto;
  margin-top: 24rpx;
  padding: 24rpx;
  color: #8f8f8f;
  font-size: 28rpx;
}
  

  .gallery {
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    flex-wrap: wrap;
    background-color: #fff;
    margin: 30rpx 4rpx 30rpx 24rpx;

}

/*每张图片所占容器*/
.itemImage {
    position: relative;
    margin-right: 20rpx;
}


/*小图片*/
.thumb {
  position: relative;
  /* margin-right: 20rpx; */
  width: 160rpx;
  height: 160rpx;
}

/*删除按钮*/
.delete {
	position: absolute;
	height: 34rpx;
	top: 0rpx;
  right:0;
	width: 34rpx;
}

.delete image {
	position: absolute;
	width: 30rpx;
	height: 30rpx;
}


.bottom{
  position: fixed;
  bottom: 0;
  height: 128rpx;
  width: 100%;
  background-color: #ffffff;
}

.bottomBlue{
  position: fixed;
  background-color: #3185FF;
  width: 640rpx;
  height: 88rpx;
  bottom: 24rpx;
  left: 50%;
  color: #ffffff;
  font-size: 34rpx;
  text-align: center;
  transform: translate(-50%,0);
  line-height: 88rpx;
}


