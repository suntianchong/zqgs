.top{
  height: 104rpx;
  width: 100%;
  display: flex;
  align-items: center;
  position: fixed;
  top: 0;
  z-index: 999;
  background-color: #ffffff;
  box-shadow: 0rpx  6rpx  20rpx #f2f3f5;
}


.searchInput{
  width: 702rpx;
  height: 68rpx;
  background: #F5F5F5;
  border-radius: 4px;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  margin-left: 24rpx;
}


.searchInput input{
  width: 650rpx;
  margin-left: 28rpx;
}

.top image{
  width: 38rpx;
  height: 38rpx;
  margin-right: 27rpx;
}

.inputComText{
  height: 120rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #F0F0F0;
  width: 100%;
  font-size: 32rpx;
  align-items: center;
  display: flex;
  color: #3D3D3D;
}


.searchTextIcon{
  width: 25rpx;
  height: 25rpx;
  margin: 0rpx 15rpx 0rpx 15rpx;
} 

.item{
  display: flex;
 line-height: 120rpx;
  align-items:center;
  height: 120rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.row{
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

.logo{
  height: 84rpx;
  width: 84rpx;
  margin-left: 20rpx;
}

.name{
  color: #3d3d3d;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.searchHistory{
  margin-top: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}


.searchHistoryTip{
  font-size: 32rpx;
  color: #3d3d3d;
  margin-left: 24rpx;
  margin-top: 20rpx;
}

.clearSearchHistory{
  width: 36rpx;
  height: 36rpx;
  margin-right: 24rpx;
}

.searchHistoryContent{
  width: 100%;
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  margin-left: 14rpx;
  margin-right: 14rpx; 
  margin-top: 20rpx;
}

.searchHistoryContent view{
  padding: 7rpx 28rpx 7rpx 28rpx;
  background-color: #edeef0;
  color: 3d3d3d;
  font-size: 28rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
  border-radius: 30rpx;
  margin-top: 20rpx;
}
