.page{

}

.hiddenPage{
  height:100vh;
  overflow:hidden;
}


.columnGray{
  line-height: 88rpx;
  font-size: 32rpx;
  background-color: #f5f5f5;
  padding-left: 20rpx;

}

.column{
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
  display: flex;


}

.columnLeft{
  margin-left: 20rpx;
  width: 220rpx;
}

.columnRight{
  font-size: 28rpx;
  color: #8f8f8f;
  width: 500rpx;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: right;
}


.rowRight{
  height: 20rpx;
  width: 11rpx;
  margin-right: 20rpx;
}

.jobSummary{
  font-size: 28rpx;
  color: #8f8f8f;
  padding: 20rpx;
}

.submit{
  width: 640rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #3185FF;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 2rpx;
  position: fixed;
  bottom: 20rpx;
  text-align: center;
  left: 50%;
  transform: translate(-50%,0);
  z-index: 10;
}

.inputFrame{
  width: 702rpx;
  height: 1000rpx;
  background-color: #ffffff;
  position: absolute;
  top: 30rpx;
  z-index: 10;  
  left: 50%;
  transform: translate(-50%,0);
}

.inputFrameTitle{
  font-size: 42rpx;
  text-align: center;
  margin-top: 36rpx;
}

.closeInputFrame{
  width: 44rpx;
  height: 44rpx;
  right: 40rpx;
  top: 40rpx;
  position: absolute;
}

.inputFrameContent{
  width: 654rpx;
  height: 750rpx; 
  background-color: #FAFAFA;
  margin-top: 36rpx;
  margin-left: auto;
  margin-right: auto;
  border: 1rpx #ececec solid;
  
}

.inputColumn{
  font-size: 32rpx;
  height: 710rpx;
  width: 614rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
}


.inputFrameBottom{
  display: flex;
}

.inputFrameBottomLeft,.inputFrameBottomRight{
  width: 50%;
  margin-top: 20rpx;
}

.clear{
  line-height: 74rpx;
  height: 74rpx;
  width: 212rpx;
  text-align: center;
  border: 1rpx solid #3185FF;
  color: #3185FF;
  margin-left: auto;
  margin-right: auto;
}

.finish{
  line-height: 74rpx;
  height: 74rpx;
  width: 212rpx;
  text-align: center;
  background-color: #3185FF;
  color: #ffffff;
  margin-left: auto;
  margin-right: auto;
}

.hidePage{
  position: absolute;  
  top: 0%;  
  left: 0%;  
  width: 100%;  
  height: 100%;   
  background-color: black;  
  z-index: 9;  
  opacity: 0.6;  
  filter: alpha(opacity=70);  
}