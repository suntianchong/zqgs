.searchContent{
  height: 88rpx;
  width: 100%;
  box-shadow:0px 2px 10px 0px rgba(0,0,0,0.08);
  background-color: #ffffff;
  display: flex;
  align-items: center;
  position: relative;
}

.top{
  display: flex;
  height: 156rpx;
  justify-content: space-between;
}

.userInfoLeft{
  display: flex;
  align-items: center;
}

.contentList{
  /* padding: 24rpx; */
}


.imagesList{
  display: flex;
}

.image{
  width: 140rpx;
  height: 140rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.operate{
  margin-left: 310rpx;
  margin-right: 59rpx;
  height: 72rpx;
  align-items: center;
  justify-content: space-between;
  font-size: 32rpx;
  display: flex;
}

.operate image{
  margin-right: 8rpx;
  height: 38rpx;
  width: 38rpx;
}

.like,.comment,.share{
  display: flex;
  margin-left: 30rpx;
  align-items: center;
  color: #c2c2c2;
  font-size: 30rpx;
}

.line2{
  width: 100%;
  height: 16rpx;
  background-color:rgba(242,244,246,1);
}


.userPic{
  width: 80rpx;
  height: 80rpx;

  border-radius: 50%;
}

.sexCompany{
  font-size: 24rpx;
  color: #b8c0cc;
  margin-top: 5rpx;
}

.line{
  width: 686rpx;
  height: 1rpx;
  background-color: #000000;
  opacity: 0.08;
  margin-top: 30rpx;
}

.content{
  font-size: 30rpx;
  margin-top: 3rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  display:-webkit-box; 
  -webkit-box-orient:vertical;
  -webkit-line-clamp:5; 
}

.userName{
  font-size: 32rpx;
  color: #525a66;
  margin-bottom: 5rpx;
}
.time_operate{
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.time{
  font-size: 28rpx;
  color: #c7c7c7;
  margin-top: 39rpx;

}



.searchColumn{
  width: 702rpx;
  height: 63rpx;
  background-color: #f0f2f5;
  border-radius: 100rpx;
  display: flex;
  align-items: center;
  margin-right: auto;
  margin-left: auto;
}

.searchColumn2{
  width: 620rpx;
  height: 64rpx;
  background-color: #f0f2f5;
  border-radius: 100rpx;
  margin-left: 10rpx;
  display: flex;
  align-items: center;
}

.work_search{
  width: 34rpx;
  height: 34rpx;
}

.input_search{
  color:#8a9099;
  font-size:28rpx;
  margin-left: 11rpx;
}

.cancelSearch{
  color: #636363;
  margin-left: 25rpx;
  font-size: 30rpx;
}

/* 发布按钮 */
.getUserInfo{
  position: fixed;
  right: 15rpx;
  bottom: 30rpx;
  padding: 0;
}



/* 发布按钮 */

.getUserInfo image{
  width: 194rpx;
  height: 100rpx;
  position: relative;
}
.btn::after {
  border: none;
}
.btn {
  background-color: #fff;

}