.every{
  height: 118rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  align-items: center;
}

.leftIcon{
  width: 48rpx;
  height: 48rpx;
  margin-left: 32rpx;
}

.rightRow{
  width: 14rpx;
  height: 24rpx;
  margin-left: 15rpx;
  margin-right: 24rpx;
}

.every_left,.every_right{
  display: flex;
  align-items: center;
}


.openAssist{
  height: 92rpx;
  width: 704rpx;
  display: flex;
  margin-left: auto;
  margin-right: auto;
  margin-top: 20rpx;
}

.every_right view{
  color: #8f8f8f;
}

.every_left view{
  color: #3d3d3d;
  margin-left: 15rpx;
}

.hidePage{
  position: absolute;  
  top: 0%;  
  left: 0%;  
  width: 100%;  
  height: 100%;  
  background-color: black;  
  z-index: 9;  
  opacity: 0.5;  
  filter: alpha(opacity=70);  
}

.authBut{
  position: absolute;
  top: 200rpx;
  left: 50%;
  transform: translate(-50%,0);
  width: 410rpx;
  height: 520rpx;
  z-index: 10;  
}

.authorize{
  position: absolute;
  left: 50%;
  transform: translate(-50%,0);
  width: 410rpx;
  height: 520rpx;
  z-index: 10;  
}

.blueBG{
  width: 100%;
  height: 40rpx;
  background-color: #3185FF;
  position: absolute;
  top: 0;
  z-index: 1;
}

.blueBG2{
  width: 100%;
  height: 105rpx;
  position: absolute;
  top: 40rpx;
  z-index: 1;
}

.top{
  width: 702rpx;
  height: 210rpx;
  background-color: #ffffff;
  z-index: 8;
  position: relative;
  margin-left: auto;
  margin-right: auto;
  margin-top: 25rpx;
  box-shadow: 0rpx 4rpx 10rpx 0rpx #e7e7e7;  
  display: flex;
}

.topLeft{
  width: 185rpx;
  height: 100%;
  display: flex;
  align-items: center;
}

.topRight{
  width: 517rpx;
  height: 100%;
}


.userPic{
  width: 129rpx;
  height: 129rpx;
  border-radius: 50%;
  margin-left: auto;
  margin-right: auto;
}


.userInfoTop{
  height: 105rpx;
  color: #000;
  font-size: 38rpx;
  font-weight: bold;
  position: relative;
  display: flex;
}

.nickName{
  width: 321rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.editUserInfo{
  width: 164rpx;
  height: 54rpx;
}



.userInfoBottom{
  height: 105rpx;
  font-size: 24rpx;
  color: #8f8f8f;
  position: relative;
}

.userInfoBottom  view{
  position: absolute;
  top: 10rpx;
}

.sex{
  width: 28rpx;
  height: 28rpx;
}

.content{
  width: 702rpx;
  height: 372rpx;
  box-shadow: 0rpx 4rpx 10rpx 0rpx #e7e7e7;
  margin-left: auto;
  margin-right: auto;
  margin-top: 32rpx;
}