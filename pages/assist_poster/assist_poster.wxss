page{
  background: #fafafa;
}
.poster{
  width: 357px;
  height: 385px;
  background-color: #ffffff;
  margin-left: auto;
  margin-right: auto;
  margin-top: 121rpx;
  box-shadow: 0 2px 6px 0 rgba(0,0,0,0.08);
}

.bottom{
  width: 100%;
  height: 128rpx;
  position: absolute;
  bottom: 0;
  background-color: #ffffff;
  border-top: 2rpx solid #eeeeee;
}

.savePoster{
  background-color: #eec37b;
  font-size: 34rpx;
  color: #ffffff;
  border-radius: 2rpx;
  width: 640rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  margin-top: 16rpx;
  left: 50%;
  position: absolute;
  transform: translate(-50%,0);
}