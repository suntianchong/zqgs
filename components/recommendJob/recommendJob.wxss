.recommend_box{
  padding: 30rpx 0rpx 30rpx 30rpx;
  box-sizing: border-box;
}
.title{
  font-size: 24rpx;
  color: #333;
  margin-bottom: 20rpx;
}
.recommend_detail{
  display: flex;
}
.recommend_job{
  display: flex;
  position: relative;
  border-right: 1rpx solid #ccc;
  margin-right: 20rpx;
  min-width: 545rpx;
}
.spin{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 888;
  height: 100%;
  background: rgba(255,255,255,0.95)
}
.ele{
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 70rpx;
  height: 70rpx;
  right: 0;
  margin: auto;
}
.recommend_img{
  width: 80rpx;
  height: 80rpx;
  margin: auto;
  display: block;
  margin-bottom: 14rpx;
}
.recommend_item view{
  font-size: 20rpx;
  width: 107rpx;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.recommend_item{
  margin-right: 30rpx;
}
.btn_item{
  display: flex;
  align-items: center;
}
.btn_item view{
  font-size: 24rpx;
  color: #333;
}
.recommend_circle{
  width: 16rpx;
  height: 16rpx;
  background: rgb(241,175,79);
  border-radius: 50%;
  margin-right: 14rpx;
}
.recommend_btn{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}